<h1>[{{title}}] 글 {{#if (eq mode "create")}}작성{{else}}수정{{/if}}</h1>

<div>
    <!-- mode에 따라 폼이 반영되는 URL 변경 -->
    <form name="boardForm" method="post"
        {{#if (eq mode "create")}} action="/write"
        {{else}} action="/modify" {{/if}}>
    
    <!-- 수정 모드의 경우 id값을 hidden으로 전송-->
    {{#if (eq mode "modify")}}
    <input type="hidden" name="id" value="{{post._id}}">
    {{/if}}

        <!-- 제목 입력 -->
        <div>
            <label>제목</label>
            <input type="text" name="title" placeholder="제목을 입력하세요." value="{{post.title}}">
        </div>

        <!-- 이름 입력 -->
        <div>
            <label for="">이름</label>
            <input type="text" name="writer" placeholder="이름을 입력하세요." value="{{post.writer}}">
        </div>

        <!-- 비밀번호 입력 -->
        <div>
            <label for="">비밀번호</label>
            <input type="password" name="password" placeholder="비밀번호를 입력하세요.">
        </div>

        <!-- 본문 입력 -->
        <div>
            <label for="">본문 내용</label>
            <br>
            <textarea name="content" cols="50" rows="10" placeholder="본문">{{post.content}}</textarea>
            <br>
        </div>

        <!-- 버튼 영역 -->
        <div>
            <button type="submit">등록</button>
            <button type="button" onclick="location.href='/'">돌아가기</button>
        </div>
    </form>
</div>